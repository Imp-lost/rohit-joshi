/* ========== RESPONSIVE DESIGN - FIXED ========== */
@media (max-width: 768px) {
  .hero-banner-section {
    height: auto; /* Remove forced mobile height */
  }

  /* Header responsive */
  .desktop-header {
    display: none;
  }

  .centered-gift-text {
    display: none; /* Hide centered text on mobile since it's in the menu */
  }
  
  .mobile-header {
    display: flex;
  }

  /* Body responsive - FIXED */
  .hero-image-container {
    height: 400px; /* Smaller, more reasonable height instead of 70vh */
  }

  .hero-content-overlay {
    padding: 2rem 0 1rem 0; /* Reduced padding */
  }

  .hero-content-wrapper {
    padding: 0; /* Consistent - no extra padding needed */
  }
  
  .hero-title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  
  .hero-description {
    font-size: 1rem;
    margin-bottom: 1.5rem;
    max-width: none;
  }

  .cta-button {
    padding: 0.8rem 2rem;
    font-size: 0.9rem;
  }

  /* Footer responsive */
  .hero-footer {
    padding: 1rem;
  }
  
  .promo-banner p {
    font-size: 0.8rem;
    padding: 0.5rem;
  }
}

@media (max-width: 480px) {
  .hero-image-container {
    height: 350px; /* Even smaller on tiny screens */
  }

  .hero-title {
    font-size: 2rem;
  }
  
  .mobile-brand h1, .mobile-menu-header .mobile-brand h1 {
    font-size: 1.5rem;
  }
  
  .cta-button {
    padding: 0.7rem 1.8rem;
    font-size: 0.85rem;
  }

  .hero-content-overlay {
    padding: 1.5rem 0 1rem 0; /* Further reduced padding */
  }

  .hero-content-wrapper {
    padding: 0 1rem;
  }

  .mobile-gift-text p {
    font-size: 1rem;
  }

  .mobile-menu-container {
    width: 90%;
  }
}

