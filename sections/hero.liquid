}

/* Content Overlay - Bottom Left Positioning - FIXED */
.hero-content-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  {% comment %} background: linear-gradient(transparent, rgba(0,0,0,0.3)); {% endcomment %}
  padding: 2rem 0 1rem 0; /* Reduced from 4rem to prevent stretching */
}

/* Content wrapper with max-width - FIXED */
