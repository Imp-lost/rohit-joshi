<!-- sections/hero-banner.liquid -->
<div class="hero-banner-section">
  <div class="hero-content">
    <!-- Left side content -->
    <div class="hero-text-content">
      <div class="brand-logo">
        <h1>{{ section.settings.brand_name }}</h1>
      </div>
      
      <div class="hero-main-content">
        <h2 class="hero-title">{{ section.settings.hero_title }}</h2>
        <p class="hero-description">{{ section.settings.hero_description }}</p>
        
        <div class="hero-cta">
          <a href="{{ section.settings.cta_link }}" class="cta-button animated-button">
            {{ section.settings.cta_text }}
            <span class="button-arrow">â†’</span>
          </a>
        </div>
      </div>
      
      <!-- Bottom promotional text -->
      <div class="promo-text">
        <p>{{ section.settings.promo_text }}</p>
      </div>
    </div>
    
    <!-- Right side - Hero image -->
    <div class="hero-image">
      {% if section.settings.hero_image != blank %}
        {{ section.settings.hero_image | image_url: width: 1440 | image_tag: 
           loading: 'lazy', 
           alt: section.settings.hero_image.alt | default: 'Hero banner image',
           class: 'hero-bg-image',
           width: 1440,
           height: 780 }}
      {% else %}
        <img src="{{ 'herobanner-standin.svg' | asset_url }}" 
             alt="Hero banner standin" 
             class="hero-bg-image standin-image"
             width="1440"
             height="780">
      {% endif %}
      
      <!-- Top right CTA -->
      <div class="top-cta">
        <a href="{{ section.settings.top_cta_link }}" class="top-cta-button animated-button">
          {{ section.settings.top_cta_text }}
          <span class="button-arrow"></span>
        </a>
      </div>
    </div>
  </div>
</div>

<style>
.hero-banner-section {
  width: 100%;
  min-height: 100vh;
  display: flex;
  align-items: center;
  padding: 2rem;
  {% comment %} background: #ffffff; {% endcomment %}
  position: relative;
}

.hero-content {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  max-width: 1400px;
  margin: 0 auto;
  width: 100%;
  align-items: center;
}

.hero-text-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
  min-height: 60vh;
}

.brand-logo h1 {
  font-size: 2.5rem;
  font-weight: 700;
  margin: 0;
  color: #000;
  {% comment %} border: 3px solid #e53e3e; {% endcomment %}
  padding: 1rem 2rem;
  display: inline-block;
  letter-spacing: 2px;
}

.hero-main-content {
  margin: 3rem 0;
}

.hero-title {
  font-size: 3.5rem;
  font-weight: 800;
  margin-bottom: 2rem;
  color: #000;
  line-height: 1.2;
  {% comment %} border: 3px solid #e53e3e; {% endcomment %}
  padding: 2rem;
  {% comment %} background: rgba(229, 62, 62, 0.05); {% endcomment %}
}

.hero-description {
  font-size: 1.25rem;
  line-height: 1.6;
  margin-bottom: 3rem;
  color: #333;
  max-width: 500px;
  {% comment %} border: 2px solid #e53e3e; {% endcomment %}
  padding: 1.5rem;
  {% comment %} background: rgba(229, 62, 62, 0.02); {% endcomment %}
}

.hero-cta {
  margin-bottom: 2rem;
}

.cta-button {
  background: #000;
  color: #fff;
  padding: 1rem 2.5rem;
  text-decoration: none;
  font-size: 1.1rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1px;
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  border: 2px solid #000;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.promo-text {
  margin-top: auto;
}

.promo-text p {
  font-size: 1rem;
  color: #000;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1px;
  {% comment %} border: 2px solid #e53e3e; {% endcomment %}
  padding: 1rem;
  {% comment %} background: rgba(229, 62, 62, 0.05); {% endcomment %}
  margin: 0;
}

.hero-image {
  position: relative;
  height: 80vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hero-bg-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
}

.standin-image {
  opacity: 0.7;
}

.top-cta {
  position: absolute;
  top: 2rem;
  right: 2rem;
}

.top-cta-button {
  background: #ffd700;
  color: #000;
  padding: 0.75rem 2rem;
  text-decoration: none;
  font-size: 1rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 1px;
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  border: 2px solid #000;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Button animations */
.animated-button {
  position: relative;
  overflow: hidden;
  transform: translateZ(0);
}

.animated-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
  transition: left 0.5s ease;
}

.animated-button:hover::before {
  left: 100%;
}

.animated-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(0,0,0,0.15);
}

.cta-button:hover {
  background: #e53e3e;
  border-color: #e53e3e;
  transform: translateY(-3px);
  box-shadow: 0 10px 30px rgba(229, 62, 62, 0.3);
}

.top-cta-button:hover {
  background: #000;
  color: #ffd700;
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(0,0,0,0.2);
}

.button-arrow {
  transition: transform 0.3s ease;
}

.animated-button:hover .button-arrow {
  transform: translateX(5px);
}

/* Responsive design */
@media (max-width: 768px) {
  .hero-content {
    grid-template-columns: 1fr;
    gap: 2rem;
  }
  
  .hero-banner-section {
    min-height: auto;
    padding: 1rem;
  }
  
  .hero-image {
    height: 50vh;
    order: -1;
  }
  
  .brand-logo h1 {
    font-size: 2rem;
    padding: 0.8rem 1.5rem;
  }
  
  .hero-title {
    font-size: 2.5rem;
    padding: 1.5rem;
  }
  
  .hero-description {
    font-size: 1.1rem;
    padding: 1rem;
  }
  
  .top-cta {
    position: static;
    margin-top: 1rem;
    text-align: center;
  }
}

@media (max-width: 480px) {
  .hero-title {
    font-size: 2rem;
    padding: 1rem;
  }
  
  .brand-logo h1 {
    font-size: 1.8rem;
    padding: 0.6rem 1rem;
  }
  
  .cta-button,
  .top-cta-button {
    padding: 0.8rem 1.5rem;
    font-size: 0.9rem;
  }
}
</style>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "brand_name",
      "label": "Brand Name",
      "default": "TISSO VISON"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero Title",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "hero_description",
      "label": "Hero Description",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Main CTA Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Main CTA Button Link",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "top_cta_text",
      "label": "Top CTA Button Text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "url",
      "id": "top_cta_link",
      "label": "Top CTA Button Link"
    },
    {
      "type": "text",
      "id": "promo_text",
      "label": "Promotional Text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Background Image",
      "info": "If no image is selected, the standin image will be used"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
  