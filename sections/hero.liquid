<!-- sections/hero-banner.liquid -->
<div class="hero-banner-section">
  
  <!-- ========== HEADER SECTION ========== -->
  <header class="hero-header">
    <!-- Desktop Header -->
    <div class="desktop-header">
      <div class="brand-logo">
        <h1>{{ section.settings.brand_name }}</h1>
      </div>
      <div class="top-cta">
        <a href="{{ section.settings.top_cta_link }}" class="top-cta-button animated-button">
          {{ section.settings.top_cta_text }}
          <span class="button-arrow"></span>
        </a>
      </div>
    </div>

    <!-- Centered Find Gift Text -->
    <div class="centered-gift-text">
      <p class="find-gift-text">{{ section.settings.find_gift_text }}</p>
    </div>

    <!-- Mobile Header -->
    <div class="mobile-header">
      <div class="mobile-menu-toggle">
        <span class="menu-icon hamburger-icon"></span>
      </div>
      <div class="mobile-brand">
        <h1>{{ section.settings.brand_name }}</h1>
      </div>
    </div>

    <!-- Mobile Dropdown Menu -->
    <div class="mobile-dropdown-menu">
      <div class="mobile-menu-content">
        <div class="mobile-gift-text">
          <p>{{ section.settings.find_gift_text }}</p>
        </div>
        <div class="mobile-top-cta">
          <a href="{{ section.settings.top_cta_link }}" class="mobile-cta-button animated-button">
            {{ section.settings.top_cta_text }}
            <span class="button-arrow"></span>
          </a>
        </div>
      </div>
    </div>
  </header>

  <!-- ========== BODY SECTION ========== -->
  <main class="hero-body">
    <!-- Hero Background Image -->
    <div class="hero-image-container">
      <!-- Desktop Image -->
      <div class="desktop-image">
        {% if section.settings.hero_image != blank %}
          {{ section.settings.hero_image | image_url: width: 1440 | image_tag: 
             loading: 'lazy', 
             alt: section.settings.hero_image.alt | default: 'Hero banner image',
             class: 'hero-bg-image',
             width: 1440,
             height: 780 }}
        {% else %}
          <img src="{{ 'herobanner-standin.svg' | asset_url }}" 
               alt="Hero banner standin" 
               class="hero-bg-image standin-image"
               width="1440"
               height="780">
        {% endif %}
      </div>

      <!-- Mobile Image -->
      <div class="mobile-image">
        <img src="{{ 'heropictwo.svg' | asset_url }}" 
             alt="Hero banner mobile" 
             class="hero-bg-image mobile-hero-image"
             width="375"
             height="400">
      </div>
      
      <!-- Content Overlay - Bottom Left -->
      <div class="hero-content-overlay">
        <div class="hero-content-wrapper">
          <div class="hero-text-content">
            <h2 class="hero-title">{{ section.settings.hero_title }}</h2>
            <p class="hero-description">{{ section.settings.hero_description }}</p>
            
            <!-- CTA Button -->
            <div class="hero-cta">
              <a href="{{ section.settings.cta_link }}" class="cta-button animated-button">
                {{ section.settings.cta_text }}
                <span class="button-arrow"></span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- ========== FOOTER SECTION ========== -->
  <footer class="hero-footer">
    <div class="promo-banner">
      <p>{{ section.settings.promo_text }}</p>
    </div>
  </footer>

</div>

<style>
@import url('https://fonts.googleapis.com/css2?family=Jost:wght@400;500;600;700&display=swap');

/* ========== MAIN CONTAINER - FIXED ========== */
.hero-banner-section {
  width: 100%;
  height: auto;
  background: #fff;
  display: flex;
  flex-direction: column;
}

/* ========== HEADER STYLES ========== */
.hero-header {
  background: #f5f5f5;
  position: relative;
  z-index: 10;
  border-bottom: 1px solid #e0e0e0;
}

/* Desktop Header */
.desktop-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 2rem;
  max-width: 1400px;
  margin: 0 auto;
}

.brand-logo h1 {
  font-size: 2.5rem;
  font-weight: 700;
  margin: 0;
  color: #000;
  letter-spacing: 2px;
  background: transparent;
}

/* Centered Find Gift Text - NEW SECTION */
.centered-gift-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 20;
  text-align: center;
}

.find-gift-text {
  font-size: 1.2rem;
  color: #000;
  margin: 0;
  font-weight: 500;
  display: inline-block;
}

.top-cta-button {
  background: #ffd700;
  color: #000;
  padding: 0.75rem 2rem;
  text-decoration: none;
  font-size: 1rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 1px;
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border-radius: 0;
}

.top-cta-button .button-arrow {
  width: 18px;
  height: 18px;
  background-image: url('{{ "arrow-modal.svg" | asset_url }}');
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;
  filter: invert(0);
  transition: all 0.3s ease;
}

/* Mobile Header */
.mobile-header {
  display: none;
  align-items: center;
  justify-content: space-between;
  padding: 1.5rem 1rem;
  background: transparent;
  position: relative;
}

.mobile-brand h1 {
  font-size: 1.8rem;
  font-weight: 700;
  margin: 0;
  color: #000;
  letter-spacing: 2px;
  text-align: center;
  {% comment %} position: absolute;
  left: 50%;
  transform: translateX(-50%); {% endcomment %}
}

/* Mobile Menu Toggle - Updated for left positioning */
.mobile-menu-toggle {
  cursor: pointer;
  z-index: 1001;
  padding: 0.5rem;
  position: relative;
  order: -1; /* This puts it on the left */
}

/* Menu Icon Animation */
.menu-icon {
  width: 28px;
  height: 28px;
  display: block;
  transition: all 0.3s ease;
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;
}

.hamburger-icon {
  background-image: url('{{ "ham-line.svg" | asset_url }}');
}

.menu-icon.close-icon {
  background-image: url('{{ "closemodal.svg" | asset_url }}');
}

/* Mobile Dropdown Menu - New dropdown styles */
.mobile-dropdown-menu {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: #f5f5f5;
  box-shadow: 0 5px 20px rgba(0, 0, 0, 0.15);
  border-bottom: 2px solid #e0e0e0;
  opacity: 0;
  visibility: hidden;
  transform: translateY(-20px);
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  z-index: 999;
  max-height: 0;
  overflow: hidden;
}

.mobile-dropdown-menu.active {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
  max-height: 300px;
}

.mobile-menu-content {
  padding: 2rem 1.5rem;
  text-align: center;
}

.mobile-gift-text {
  margin-bottom: 2rem;
}

.mobile-gift-text p {
  font-size: 1.1rem;
  color: #333;
  margin: 0;
  font-weight: 500;
  line-height: 1.5;
}

.mobile-top-cta {
  margin-bottom: 1rem;
}

.mobile-cta-button {
  background: #ffd700;
  color: #000;
  padding: 1rem 2rem;
  text-decoration: none;
  font-size: 1rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 1px;
  display: inline-flex;
  align-items: center;
  gap: 0.75rem;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border-radius: 0;
  max-width: 280px;
  justify-content: center;
  box-shadow: 0 4px 15px rgba(255, 215, 0, 0.3);
}

.mobile-cta-button .button-arrow {
  width: 20px;
  height: 20px;
  background-image: url('{{ "arrow-modal.svg" | asset_url }}');
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;
  filter: invert(0);
  transition: all 0.3s ease;
}

.mobile-cta-button:hover {
  background: #000;
  color: #ffd700;
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(0,0,0,0.2);
}

.mobile-cta-button:hover .button-arrow {
  filter: invert(1);
  transform: translateX(5px);
}

/* ========== IMAGE CONTAINER STYLES ========== */
.desktop-image {
  display: block;
}

.mobile-image {
  display: none;
}

/* ========== BODY STYLES - FIXED ========== */
.hero-body {
  position: relative;
  border-bottom: 1px solid #e0e0e0;
}

.hero-image-container {
  position: relative;
  width: 100%;
  height: 600px;
  overflow: hidden;
}

.hero-bg-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
}

.standin-image {
  opacity: 0.7;
}

.mobile-hero-image {
  object-fit: cover;
  object-position: center;
}

/* Content Overlay - Bottom Left Positioning - FIXED */
.hero-content-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 2rem 0 1rem 0;
}

/* Content wrapper with max-width - FIXED */
.hero-content-wrapper {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 2rem;
  box-sizing: border-box;
}

.hero-text-content {
  max-width: 600px;
  word-wrap: break-word;
  overflow-wrap: break-word;
}

.hero-title {
  font-size: 40px;
  font-weight: 500;
  margin-bottom: 1rem;
  color: #000;
  line-height: 1.1;
}

.hero-description {
  font-size: 18px;
  line-height: 1.5;
  font-weight: 400;
  margin-bottom: 2rem;
  color: #000;
  max-width: 450px;
}

.hero-cta {
  margin-bottom: 1rem;
}

.cta-button {
  background: #000;
  color: #fff;
  padding: 1rem 2.5rem;
  text-decoration: none;
  font-size: 1rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1px;
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border-radius: 0;
  font-family: 'Jost', sans-serif;
}

.cta-button .button-arrow {
  width: 20px;
  height: 20px;
  background-image: url('{{ "arrow-modal.svg" | asset_url }}');
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;
  filter: invert(1);
  transition: all 0.3s ease;
}

/* ========== FOOTER STYLES ========== */
.hero-footer {
  background: #f5f5f5;
  padding: 1rem 2rem;
}

.promo-banner {
  max-width: 1400px;
  margin: 0 auto;
  text-align: center;
}

.promo-banner p {
  font-family: 'Jost', sans-serif;
  font-size: 0.9rem;
  color: #666;
  font-weight: 400;
  text-transform: uppercase;
  letter-spacing: 1px;
  margin: 0;
}

/* ========== BUTTON ANIMATIONS ========== */
.animated-button {
  position: relative;
  overflow: hidden;
  transform: translateZ(0);
}

.animated-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left 0.5s ease;
}

.animated-button:hover::before {
  left: 100%;
}

.animated-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(0,0,0,0.15);
}

.cta-button:hover {
  background: #ffd700;
  color: #000;
  transform: translateY(-3px);
  box-shadow: 0 10px 30px rgba(255, 215, 0, 0.3);
}

.cta-button:hover .button-arrow {
  filter: invert(0);
  transform: translateX(5px);
}

.top-cta-button:hover {
  background: #000;
  color: #ffd700;
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(0,0,0,0.2);
}

.top-cta-button:hover .button-arrow {
  filter: invert(1);
  transform: translateX(5px);
}

/* ========== RESPONSIVE DESIGN - SINGLE MOBILE QUERY ========== */
@media (max-width: 768px) {
  .hero-banner-section {
    height: auto;
  }

  /* Header responsive */
  .desktop-header {
    display: none;
  }

  .centered-gift-text {
    display: none;
  }
  
  .mobile-header {
    display: flex;
    padding: clamp(0.8rem, 2vw, 1rem);
  }

  /* Image switching for mobile */
  .desktop-image {
    display: none;
  }

  .mobile-image {
    display: block;
  }

  /* Body responsive - FLUID SCALING */
  .hero-image-container {
    height: clamp(350px, 50vh, 450px);
  }

  .hero-content-overlay {
    padding: clamp(1.5rem, 3vh, 2rem) 0 clamp(1.2rem, 2vh, 1.5rem) 0;
    background: linear-gradient(transparent 20%, rgba(0,0,0,0.1) 60%, rgba(0,0,0,0.2) 100%);
  }

  .hero-content-wrapper {
    padding: 0 clamp(1rem, 4vw, 1.5rem);
  }
  
  .hero-title {
    font-size: clamp(2rem, 7vw, 2.8rem);
    margin-bottom: clamp(1rem, 2vh, 1.2rem);
    font-weight: 600;
    line-height: 1.1;
  }
  
  .hero-description {
    font-size: clamp(0.95rem, 3vw, 1.1rem);
    margin-bottom: clamp(1.8rem, 3vh, 2rem);
    max-width: none;
    line-height: 1.6;
    color: #333;
  }

  .cta-button {
    padding: clamp(0.8rem, 2.5vw, 1rem) clamp(1.8rem, 5vw, 2.2rem);
    font-size: clamp(0.85rem, 2.5vw, 1rem);
    font-weight: 700;
  }

  /* Mobile brand scaling */
  .mobile-brand h1 {
    font-size: clamp(1.4rem, 4.5vw, 1.8rem);
  }

  /* Menu icons scaling */
  .menu-icon {
    width: clamp(24px, 6vw, 28px);
    height: clamp(24px, 6vw, 28px);
  }

  /* Mobile dropdown content scaling */
  .mobile-menu-content {
    padding: clamp(1.5rem, 4vh, 2rem) clamp(1rem, 3vw, 1.5rem);
  }

  .mobile-gift-text p {
    font-size: clamp(1rem, 3vw, 1.1rem);
  }

  .mobile-cta-button {
    padding: clamp(0.8rem, 2.5vw, 1rem) clamp(1.5rem, 5vw, 2rem);
    font-size: clamp(0.9rem, 2.5vw, 1rem);
    width: 100%;
    max-width: clamp(250px, 80vw, 280px);
  }

  /* Footer responsive */
  .hero-footer {
    padding: clamp(1rem, 3vh, 1.5rem) clamp(1rem, 3vw, 1rem);
  }
  
  .promo-banner p {
    font-size: clamp(0.8rem, 2.2vw, 0.9rem);
    padding: clamp(0.5rem, 1vh, 0.5rem);
    line-height: 1.4;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const menuToggle = document.querySelector('.mobile-menu-toggle');
  const dropdownMenu = document.querySelector('.mobile-dropdown-menu');
  const menuIcon = document.querySelector('.menu-icon');
  let isMenuOpen = false;
  
  // Toggle menu function
  function toggleMenu() {
    isMenuOpen = !isMenuOpen;
    
    if (isMenuOpen) {
      // Open menu
      dropdownMenu.classList.add('active');
      menuIcon.classList.remove('hamburger-icon');
      menuIcon.classList.add('close-icon');
    } else {
      // Close menu
      dropdownMenu.classList.remove('active');
      menuIcon.classList.remove('close-icon');
      menuIcon.classList.add('hamburger-icon');
    }
  }
  
  // Menu toggle click event
  if (menuToggle) {
    menuToggle.addEventListener('click', toggleMenu);
  }
  
  // Close menu when clicking outside
  document.addEventListener('click', function(e) {
    if (!menuToggle.contains(e.target) && !dropdownMenu.contains(e.target) && isMenuOpen) {
      toggleMenu();
    }
  });
  
  // Close menu on escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && isMenuOpen) {
      toggleMenu();
    }
  });

  // Prevent menu from closing when clicking inside dropdown
  if (dropdownMenu) {
    dropdownMenu.addEventListener('click', function(e) {
      e.stopPropagation();
    });
  }
});
</script>

