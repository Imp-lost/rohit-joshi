  text-decoration: none;
  font-size: 1rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 1px;
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border-radius: 0;
  width: 100%;
  max-width: 300px;
  justify-content: center;
}

.mobile-cta-button .button-arrow {
  width: 18px;
  height: 18px;
  background-image: url('{{ "arrow-modal.svg" | asset_url }}');
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;
  filter: invert(0);
  transition: all 0.3s ease;
}

.mobile-cta-button:hover {
