<!-- sections/hero-banner.liquid -->
<div class="hero-banner-section">
  
  <!-- ========== HEADER SECTION ========== -->
  <header class="hero-header">
    <!-- Desktop Header -->
    <div class="desktop-header">
      <div class="brand-logo">
        <h1>{{ section.settings.brand_name }}</h1>
      </div>
      <div class="centered-gift-text">
        <p class="find-gift-text">{{ section.settings.find_gift_text }}</p>
      </div>
      <div class="top-cta">
        <a href="{{ section.settings.top_cta_link }}" class="top-cta-button">
          {{ section.settings.top_cta_text }}
          <span class="button-arrow">→</span>
        </a>
      </div>
    </div>

    <!-- Mobile Header -->
    <div class="mobile-header">
      <div class="mobile-brand">
        <h1>{{ section.settings.brand_name }}</h1>
      </div>
      <div class="mobile-gift-text">
        <p class="find-gift-text">{{ section.settings.find_gift_text }}</p>
      </div>
      <div class="mobile-cta">
        <a href="{{ section.settings.top_cta_link }}" class="top-cta-button">
          {{ section.settings.top_cta_text }}
          <span class="button-arrow">→</span>
        </a>
      </div>
    </div>
  </header>

  <!-- ========== BODY SECTION ========== -->
  <main class="hero-body">
    <!-- Hero Background Image -->
    <div class="hero-image-container">
      {% if section.settings.hero_image != blank %}
        {{ section.settings.hero_image | image_url: width: 1440 | image_tag: 
           loading: 'lazy', 
           alt: section.settings.hero_image.alt | default: 'Hero banner image',
           class: 'hero-bg-image',
           width: 1440,
           height: 780 }}
      {% else %}
        <img src="{{ 'herobanner-standin.svg' | asset_url }}" 
             alt="Hero banner standin" 
             class="hero-bg-image standin-image"
             width="1440"
             height="780">
      {% endif %}
      
      <!-- Content Overlay - Bottom Left -->
      <div class="hero-content-overlay">
        <div class="hero-content-wrapper">
          <div class="hero-text-content">
            <h2 class="hero-title">{{ section.settings.hero_title }}</h2>
            <p class="hero-description">{{ section.settings.hero_description }}</p>
            
            <!-- CTA Button -->
            <div class="hero-cta">
              <a href="{{ section.settings.cta_link }}" class="cta-button">
                {{ section.settings.cta_text }}
                <span class="button-arrow">→</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- ========== FOOTER SECTION ========== -->
  <footer class="hero-footer">
    <div class="promo-banner">
      <p>{{ section.settings.promo_text }}</p>
    </div>
  </footer>

</div>

<style>
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

/* ========== MAIN CONTAINER ========== */
.hero-banner-section {
  width: 100%;
  min-height: 100vh;
  background: #fff;
  display: flex;
  flex-direction: column;
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

/* ========== HEADER STYLES ========== */
.hero-header {
  background: #f8f9fa;
  position: relative;
  z-index: 10;
  padding: 20px 0;
}

/* Desktop Header */
.desktop-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40px;
  max-width: 1400px;
  margin: 0 auto;
  position: relative;
}

.brand-logo h1 {
  font-size: 24px;
  font-weight: 700;
  margin: 0;
  color: #000;
  letter-spacing: 4px;
  text-transform: uppercase;
}

/* Centered Find Gift Text */
.centered-gift-text {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
}

.find-gift-text {
  font-size: 16px;
  color: #333;
  margin: 0;
  font-weight: 400;
  letter-spacing: 0.5px;
}

.top-cta-button {
  background: #f0d000;
  color: #000;
  padding: 12px 24px;
  text-decoration: none;
  font-size: 14px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1px;
  display: inline-flex;
  align-items: center;
  gap: 8px;
  border: none;
  cursor: pointer;
}

.button-arrow {
  font-size: 16px;
  font-weight: bold;
}

/* Mobile Header */
.mobile-header {
  display: none;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  gap: 15px;
}

.mobile-brand h1 {
  font-size: 20px;
  font-weight: 700;
  margin: 0;
  color: #000;
  letter-spacing: 3px;
  text-transform: uppercase;
}

.mobile-gift-text {
  text-align: center;
}

/* ========== BODY STYLES ========== */
.hero-body {
  flex: 1;
  position: relative;
}

.hero-image-container {
  position: relative;
  width: 100%;
  height: 75vh;
  overflow: hidden;
}

.hero-bg-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
}

.standin-image {
  opacity: 0.8;
}

/* Content Overlay - Bottom Left Positioning */
.hero-content-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 60px 0 40px 0;
}

.hero-content-wrapper {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 40px;
}

.hero-text-content {
  max-width: 500px;
}

.hero-title {
  font-size: 48px;
  font-weight: 400;
  margin-bottom: 24px;
  color: #000;
  line-height: 1.1;
  letter-spacing: -0.5px;
}

.hero-description {
  font-size: 16px;
  line-height: 1.6;
  font-weight: 400;
  margin-bottom: 32px;
  color: #333;
  max-width: 420px;
}

.hero-cta {
  margin-bottom: 20px;
}

.cta-button {
  background: #000;
  color: #fff;
  padding: 16px 32px;
  text-decoration: none;
  font-size: 14px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1px;
  display: inline-flex;
  align-items: center;
  gap: 8px;
  border: none;
  cursor: pointer;
}

/* ========== FOOTER STYLES ========== */
.hero-footer {
  background: #f8f9fa;
  padding: 20px 40px;
  border-top: 1px solid #e9ecef;
}

.promo-banner {
  max-width: 1400px;
  margin: 0 auto;
  text-align: center;
}

.promo-banner p {
  font-size: 12px;
  color: #666;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 2px;
  margin: 0;
}

/* ========== RESPONSIVE DESIGN ========== */
@media (max-width: 768px) {
  .hero-banner-section {
    min-height: 100vh;
  }

  /* Header responsive */
  .desktop-header {
    display: none;
  }
  
  .mobile-header {
    display: flex;
  }

  /* Body responsive */
  .hero-image-container {
    height: 60vh;
  }

  .hero-content-overlay {
    padding: 40px 0 30px 0;
  }

  .hero-content-wrapper {
    padding: 0 20px;
  }
  
  .hero-title {
    font-size: 36px;
    margin-bottom: 20px;
  }
  
  .hero-description {
    font-size: 15px;
    margin-bottom: 28px;
    max-width: none;
  }

  .cta-button {
    padding: 14px 28px;
    font-size: 13px;
  }

  .top-cta-button {
    padding: 10px 20px;
    font-size: 13px;
  }

  /* Footer responsive */
  .hero-footer {
    padding: 16px 20px;
  }
  
  .promo-banner p {
    font-size: 11px;
    letter-spacing: 1.5px;
  }
}

@media (max-width: 480px) {
  .hero-title {
    font-size: 28px;
  }
  
  .mobile-brand h1 {
    font-size: 18px;
    letter-spacing: 2px;
  }
  
  .cta-button {
    padding: 12px 24px;
    font-size: 12px;
  }

  .top-cta-button {
    padding: 8px 16px;
    font-size: 12px;
  }

  .hero-content-overlay {
    padding: 30px 0 20px 0;
  }

  .hero-content-wrapper {
    padding: 0 16px;
  }

  .find-gift-text {
    font-size: 14px;
  }

  .hero-footer {
    padding: 12px 16px;
  }
}
</style>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Header Settings"
    },
    {
      "type": "text",
      "id": "brand_name",
      "label": "Brand Name",
      "default": "TISSO VISON"
    },
    {
      "type": "text",
      "id": "find_gift_text",
      "label": "Find Gift Text",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "top_cta_text",
      "label": "Top CTA Button Text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "url",
      "id": "top_cta_link",
      "label": "Top CTA Button Link"
    },
    {
      "type": "header",
      "content": "Body Settings"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero Title",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "hero_description",
      "label": "Hero Description",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Main CTA Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Main CTA Button Link"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Background Image",
      "info": "If no image is selected, the standin image will be used"
    },
    {
      "type": "header",
      "content": "Footer Settings"
    },
