  background-image: url('{{ "ham-line.svg" | asset_url }}');
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;
  display: block;
  transition: all 0.3s ease;
}

/* Mobile Menu Overlay */
.mobile-menu-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.8);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.mobile-menu-overlay.active {
  opacity: 1;
  visibility: visible;
}

.mobile-menu-container {
  position: absolute;
  top: 0;
  right: -100%;
  width: 80%;
  max-width: 400px;
  height: 100vh;
  background: #f5f5f5;
  transition: right 0.3s ease;
  overflow-y: auto;
}

.mobile-menu-overlay.active .mobile-menu-container {
  right: 0;
}

.mobile-menu-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1rem;
  border-bottom: 1px solid #e0e0e0;
}

.mobile-menu-header .mobile-brand h1 {
  position: relative;
  left: auto;
  transform: none;
  font-size: 1.5rem;
}

.mobile-menu-close {
  cursor: pointer;
}

.close-icon {
  width: 24px;
  height: 24px;
  background-image: url('{{ "closemodal.svg" | asset_url }}');
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;
  display: block;
}

.mobile-menu-content {
  padding: 2rem 1rem;
  text-align: center;
}

.mobile-gift-text {
  margin-bottom: 2rem;
}

.mobile-gift-text p {
  font-size: 1.1rem;
  color: #000;
  margin: 0;
  font-weight: 500;
  line-height: 1.4;
}

.mobile-top-cta {
  margin-bottom: 1rem;
}

.mobile-cta-button {
  background: #ffd700;
  color: #000;
