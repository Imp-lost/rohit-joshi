  top: 40px;
  right: 75px;
}

/* Product 4: Bottom-left corner */
.product-item:nth-child(4) .product-overlay {
 top: 40px;
  right: 100px;
}

/* Product 5: Top-left corner */
.product-item:nth-child(5) .product-overlay {
  top: 65px;
  left: 140px;
}

/* Product 6: Bottom-center */
